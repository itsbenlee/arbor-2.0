#new-project.section-margin-top.row
  - if @projects
    %table
      %tr
        %th ID
        %th Name
        %th
      - @projects.each do |project|
        %tr
          %td
            = link_to project.id, project_path(project)
          %td
            = link_to project.name, project_path(project)
          %td
            = link_to 'Edit', edit_project_path(project)

  .large-6.large-centered.columns
    %p.create-project= t('create_project.title')
    =link_to t('create_project.project_button'), new_project_path, class: 'button radius small success'
