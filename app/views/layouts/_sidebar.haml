%aside#sidebar.columns.small-2
  %ul
    %li
      = link_to t('sidebar.my_projects'), projects_path
      = link_to '#' do
        %span.icon-arrow
    - projects.each do |project|
      %li
        = link_to project.name, project_hypotheses_path(project_id: project.id)
        = link_to edit_project_path(project) do
          %span.icon-edit
    %li
      =link_to t('create_project.project_button'), new_project_path, class: 'button radius small success'
  %ul#workspace.active
    %li
      = t('sidebar.workspace')
    %li
      = link_to '#', class: 'canvas' do
        = image_tag('icons/canvas-icon.svg', class: 'icon')
        = t('sidebar.canvas')
        %span.bullet
    %li
      = link_to '#', class: 'lab' do
        = image_tag('icons/lab-icon.svg', class: 'icon')
        = t('sidebar.lab')
        %span.bullet
    %li
      = link_to '#', class: 'backlog' do
        = image_tag('icons/backlog-icon.svg', class: 'icon')
        = t('sidebar.backlog')
        %span.bullet
  %ul
    %li
      %p
        = t('sidebar.powered_by')
        = image_tag 'icons/arbor-icon.svg', title: 'Arbor Logo', alt: 'Powered by Arbor'
      = link_to '#' do
        %span.icon-left
