!!!
%html
  %head
    %title Arbor
    %meta{ charset: 'UTF-8' }
    %meta{ content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %meta{ content: 'Math Lessons', name: 'description' }
    %meta{ content: 'True', name: 'HandheldFriendly' }
    %meta{ content: '320', name: 'MobileOptimized' }
    %meta{ content: 'width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0', name: 'viewport' }
    %meta{ content: 'on', 'http-equiv' => 'cleartype' }
    %meta{ content: 'telephone=no', name: 'format-detection' }
    = stylesheet_link_tag    'application'
    = javascript_include_tag 'vendor/modernizr'
    = csrf_meta_tags
    - unless Rails.env.test?
      %script{:src => "//use.typekit.net/uyn6gfv.js"}
      :javascript
        try{Typekit.load();}catch(e){}
  %body{'data-action' => action_name, 'data-controller' => controller_name }
    = javascript_include_tag 'application'
    = render 'shareable/partials/spec_performance'
    = render 'layouts/sidebar', projects: @projects
    .columns.small-10.right-app-content
      = render 'layouts/notices', alert: alert, notice: notice
      = yield
    = javascript_include_tag 'application'
