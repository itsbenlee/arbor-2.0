$user_story_cell = $('<%="#user-story-#{@user_story.id}-sprint-#{@sprint.id}"%>');
$user_story_text = $('<%="#user-story-text-#{@user_story.id}"%>');
actual_status = '<%=@status%>';

if($user_story_cell.length) {
  $user_story_cell.html("<%= j render 'arbor_reloaded/projects/partials/release_plan/user_story_cell', project_id: @project.id, actual_status: @status, user_story_id: @user_story.id, sprint_id: @sprint.id %>");
}

if($user_story_text.length) {
  if(actual_status === 'DONE') {
    $user_story_text.addClass('done-user-story-text');
  } else {
    $user_story_text.removeClass('done-user-story-text');
  }
}
