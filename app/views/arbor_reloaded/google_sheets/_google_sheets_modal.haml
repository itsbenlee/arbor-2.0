  %h2= t('google_sheets.modal.title')
  = button_tag t('google_sheets.modal.export'), class: 'button radius small', id: 'google-sheets-export-submit',
    data: { url: google_sheets_authentication_url(@project) }
  .google-sheets-export-error
    - if @google_sheets_callback && !@google_sheets_response[:success]
      = t('google_sheets.modal.error')
  .google-sheets-export-success
    - if @google_sheets_callback && @google_sheets_response[:success]
      = t('google_sheets.modal.success')
      %br
      %a{ href: @google_sheets_response[:url] }=t('google_sheets.modal.link')
  .export-text
    %p.disclaimer= t('google_sheets.modal.text1')
    %p.disclaimer= t('google_sheets.modal.text2')
