.section-log.row
  .title
    %h2= t('reloaded.activities.title', project_name: @project.name)
  #log
  - @activities.each do |activity|
    - if activity.key == 'project.create_project'
      .project-creation-line
        %span.project-title= @project.name
        %span= ' was Created on'
        %span.created-at= activity.created_at.strftime("%b %e at %l:%M%P")
    - else
      .log-entry
        .log-line-left
          %span.created-at= activity.created_at.strftime("%b %e at %l:%M%P")
        .log-line-right
          - if !activity.owner_id.blank?
            .avatar-circle#avatar-circle{ style: "background-image: url(#{ @users.find(activity.owner_id).avatar_url }); color: transparent;" }
          - else
            .avatar-circle#avatar-circle.no-avatar
          .log-details
            = render_activity activity, locals: {version: 'reloaded', project_name: @project.name}
