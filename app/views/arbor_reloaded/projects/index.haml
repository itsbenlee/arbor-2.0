.projects-dashbord.row
  - if @projects.count > 0
    = render 'arbor_reloaded/projects/partials/projects_list', projects: @projects
  - else
    .no-projects
      %p.title= t('reloaded.project_dashboard.no_projects')
      %p= t('reloaded.project_dashboard.get_started')
      =link_to t('reloaded.project_dashboard.button'), '#', class: 'button radius small modal-btn', data: { reveal_id: 'project-modal' }
  #project-modal.reveal-modal{"aria-hidden" => "true", "aria-labelledby" => "project-modal", "data-reveal" => "", :role => "dialog"}
    %a.close-reveal-modal{"aria-label" => "Close"} Ã—
    = form_for :project, url: '/arbor_reloaded/projects', html: { id: 'new_project' }  do |f|
      %h2= t('reloaded.create_project.title')
      .field
        = f.text_field :name, placeholder: t('reloaded.create_project.project_name'), class: 'project-name radius login'
      .action
        = f.submit t('create_project.save_button'), class: 'button radius small modal-btn', id: 'create-project-btn'
