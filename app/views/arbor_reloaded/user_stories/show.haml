= link_to '×', '#', class: 'close-reveal-modal'
%header
  .header-wrapper
    .story-actions
      = link_to '···', '#', class: 'story-actions-link'
      = link_to '', '#', class: 'icn-delete'
      = link_to '', '#', method: :post, class: 'icn-copy'
      = link_to '', '#', method: :post, class: 'icn-archive'
    %h4
      %span.story-points 3
      %select.fibonacci-select
        %option{ value: '?', selected: true } ?
        %option{ value: '0' } 0
        %option{ value: '1' } 1
        %option{ value: '2' } 2
        %option{ value: '5' } 5
        %option{ value: '8' } 8
        %option{ value: '13' } 13
        %option{ value: '21' } 21

      .sentence
        .story-text
          %span.grey-prefix= t('reloaded.backlog.role')
          %span#role= @user_story.role
          %span.grey-prefix= t('reloaded.backlog.action')
          %span#action= @user_story.action
          %span.grey-prefix= t('reloaded.backlog.result')
          %span#result= @user_story.result
    %p.created-data
      %span.date Nov 19 at 5:45 PM
      by
      %span.author Napoleon Martinez
  .delete-confirmation-overlay
    %p.title= t('reloaded.story_modal.delete.confirmation_text')
    = link_to t('reloaded.project_dashboard.delete_project'), '#', method: :delete, class: 'button radius alert tiny'
    = link_to t('reloaded.project_dashboard.cancel'), '#', class: 'cancel'
    %p.disclaimer= t('reloaded.story_modal.delete.disclaimer')
  .edition-form
    = render 'arbor_reloaded/user_stories/edit_form', user_story: @user_story
.modal-wrapper
  %section.acceptance-criteria.story-modal-section
    %h6.story-section-title= t('reloaded.story_modal.acceptance_criteria.title')
    = render 'arbor_reloaded/acceptance_criterions/form', criterion: [@user_story, AcceptanceCriterion.new], user_story: @user_story
    %ul#acceptance-list
      - @user_story.acceptance_criterions.each do |criterion|
        = render 'arbor_reloaded/acceptance_criterions/acceptance_criterion', acceptance_criterion: criterion
