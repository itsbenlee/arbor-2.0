.user-header
  .user-avatar
    - if current_user.avatar?
      .avatar-img{ style: "background-image: url(#{ current_user.avatar_url });" }
      -# = image_tag ('current_user.avatar_url'), class: 'avatar-img'
    - else
      = image_tag current_user.gravatar_url
      .avatar-circle#avatar-circle
  %h5#user_full_name= current_user.full_name
