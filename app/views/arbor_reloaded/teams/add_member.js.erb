<% if @errors.count > 0 %>
  $('.team-member-email').addClass('errors');
  $('.team-member-errors').html('*<%= @errors[0] %>');
<% else %>
  $('.new-member-mail').val('');
  $('#team-members-modal').foundation('reveal', 'close');
  $('#teams-list').empty().html("<%= j render 'arbor_reloaded/teams/list', teams: @teams %>");
  teamBinds();
<% end %>
