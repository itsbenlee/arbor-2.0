= render 'arbor_reloaded/navigation/user_nav'
= render 'arbor_reloaded/users/user_header'
.section-people.row
  .title-breaker
    = link_to '+', '#', class: 'circle-btn'
    %h5= t('reloaded.users.people')
  %h2= t('reloaded.reloaded.people')
  = if @teams.count > 0
    %ul.teams-list.white-blocks-list.small-block-grid-1.medium-block-grid-3.large-block-grid-3
    = @teams.each do |team|
      %li.team.white-block
        .right
          = link_to '#', class: 'others' do
            &#149&#149&#149
        .actions
          = link_to '#', class: 'delete-project' do
            %span.icn-delete
          = link_to '#', method: :post, class: 'copy-project' do
            %span.icn-copy
        = link_to '#', class: 'block-wrapper with-border radius' do
          .data
            %p.truncate.title= team.name
            %p.members-amount= "#{team.users.count} members"
        .deleter
          %span.icn-delete
          %p= t('reloaded.project_dashboard.are_you_sure2')
          %p.truncate.title= team.name
          = link_to t('reloaded.project_dashboard.delete_project'), '#', method: :delete, class: 'button radius alert tiny'
          = link_to t('reloaded.project_dashboard.cancel'), '#', class: 'cancel'
  You don't have any teams yet. Create one by clicking on the plus sign.
