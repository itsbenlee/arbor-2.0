%h5= @team.name
.team-members
  .user-item.special-item
    .picture{ style: "background-image: url(#{ image_path('test-user.png') });" }
    .user-data
      %p.user-name
        %span.user-type-tag= t("reloaded.project_members.owner")
        = @team.owner_name
      %p.user-mail
        = @team.owner_email
  %ul.show-project-data.custom-scroll
    - @team.users.each do |member|
      - if member.id != @team.owner.id
        %li.user-item
          .picture{ style: "background-image: url(#{ image_path('test-user.png') });" }
          .user-data
            %p.user-name
              = member.full_name
            %p.user-mail
              = member.email
            %input.circle-checkbox{ id:'remove-member-check', type: 'checkbox', class: 'hidden-element'  }
.modal-footer
  = render 'arbor_reloaded/teams/partials/invite_members', team: @team
  = link_to t("reloaded.project_members.close"), '#', class: 'team-members-button button radius small'
