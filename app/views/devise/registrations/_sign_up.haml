%h1 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.text_field :full_name, autofocus: true, required: true, placeholder: 'Full Name'
  .field
    = f.email_field :email, autofocus: true, required: true, placeholder: 'Mail'
  .field
    - if minimum_password_length
      %em
        (#{minimum_password_length} characters minimum)
    = f.password_field :password, placeholder: 'Password', autocomplete: 'off', required: true
  .field
    = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Password Confirmation',
    required: true
  .action
    = f.submit 'Sign up', class: 'btn'
= render 'devise/shared/links'
